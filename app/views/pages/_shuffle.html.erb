<div id="shuffle" class="modal">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-body">

				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>

				<div style="margin: 30px 0;">
					<img id="shuffle-barcode">
					<p id="shuffle-number"></p>
				</div>

				<button type="button" id="shuffle-good" class="btn btn-success btn-lg btn-circle" data-id="0" data-dismiss="modal"><i class="glyphicon glyphicon-thumbs-up"></i></button>
				<button type="button" id="shuffle-bad" class="btn btn-danger btn-lg btn-circle pull-right" data-id="0"><i class="glyphicon glyphicon-thumbs-down"></i></button>

			</div>
		</div>
	</div>
</div>