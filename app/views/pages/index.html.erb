<%= render "shuffle" %>

<h2>Find A Club Card</h2>

<div class="row">
	<div class="col-sm-4">

		<div style="margin-bottom: 30px; position: relative;">
			<input id="search" type="text" placeholder="ex: Best Buy" class="form-control input-lg">
			<button id="search-clear" class="btn btn-link btn-lg" style="position: absolute; right: 30px; bottom: 0;"><i class="glyphicon glyphicon-remove-circle"></i></button>
			<button id="search-button" class="btn btn-link btn-lg" style="position: absolute; right: 0; bottom: 0;"><i class="glyphicon glyphicon-search"></i></button>
		</div>

	</div>
	<div class="col-sm-8">

		<div id="clubs" class="row">
			<% @clubs.each do |club| %>
				<div data-club="<%= club.name.downcase %>" class="col-sm-4 col-xs-6 club">
					<div class="panel panel-default pick-panel">
						<div class="panel-body">
							<a id="<%= club.id %>" class="pick-club" style="background-image: url('<%= image_url club.logo.url(:thumb) %>');" data-toggle="modal" data-target="#shuffle" data-id="<%= club.id %>" data-name="<%= club.name %>"><%= club.name %></a>
						</div>
					</div>
				</div>
			<% end %>
		</div>

		<h3>Can't Find A Card?</h3>
		<p>Send us a photo of the barcode on your Club Card and we'll add it for you!</p>
		<form class="form" role="form">
			<input type="file" style="margin-bottom: 15px;">
			<button class="btn btn-primary">Send</button>
		</form>

	</div>
</div>